<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmytrobohdanov.galleryonmap.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/galleryHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/add_item_fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        fab:menu_backgroundColor="#cc111111"
        fab:menu_colorNormal="#81d4fa"
        fab:menu_colorPressed="#7986cb"
        fab:menu_colorRipple="#78909c"
        fab:menu_icon="@drawable/ic_add_menu"
        fab:menu_labels_colorNormal="@color/white"
        fab:menu_labels_colorPressed="@color/light_grey"
        fab:menu_labels_colorRipple="@color/grey"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_labels_textColor="@color/dark_grey">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_add_photo"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/light_grey"
            fab:fab_colorRipple="@color/grey"
            fab:fab_label="Add photo"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_add_video"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/light_grey"
            fab:fab_colorRipple="@color/grey"
            fab:fab_label="Add video"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_add_download"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/light_grey"
            fab:fab_colorRipple="@color/grey"
            fab:fab_label="Add from file"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add_by_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_get_by_url"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/light_grey"
            fab:fab_colorRipple="@color/grey"
            fab:fab_label="Get by url"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>

